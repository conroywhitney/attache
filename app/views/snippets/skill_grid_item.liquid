<div class="five wide column">

  <div class="ui left aligned card">

    <div class="content">
      <div class="ui header">
        {% if skill.image.url %}
          <img src="{{ skill.image }}" class="ui middle aligned avatar image">
        {% else %}
          <img src="{{ 'wireframe/square-image.png' | theme_image_url }}" class="ui middle aligned avatar image">
        {% endif %}

        <a href="{% path_to skill %}" title="{{ skill.title }}">
          {{ skill.title }}
        </a>
      </div><!-- /header -->

      <div class="ui statistics">
        <div class="ui tiny statistic">
          <div class="value">
            <i class="student icon"></i>
            4
          </div>
          <div class="label">
            Experiences
          </div>
        </div>
        <div class="ui tiny statistic">
          <div class="value">
            <i class="cubes icon"></i>
            7
          </div>
          <div class="label">
            Projects
          </div>
        </div>
        <div class="ui tiny statistic">
          <div class="value">
            <i class="newspaper icon"></i>
            3
          </div>
          <div class="label">
            Blog Posts
          </div>
        </div>
      </div><!-- /statistics -->

    </div><!-- /content -->

    <a class="ui bottom attached button">
      {{ skill.title }}
      <i class="long right arrow icon"></i>
    </a>

  </div><!-- /card -->
</div>
