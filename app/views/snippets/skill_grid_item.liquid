<div class="five wide column">

  <div class="ui left aligned card">

    <div class="content">
      <a class="ui header" href="{{ skill.url }}" title="{{ skill.title }}">
        {% if skill.image.url %}
          <img src="{{ skill.image.url }}" class="ui middle aligned avatar image">
        {% else %}
          <img src="{{ 'wireframe/square-image.png' | theme_image_url }}" class="ui middle aligned avatar image">
        {% endif %}

        {{ skill.title }}
      </a><!-- /header -->

      <div class="description">
        {{ skill.description }}
      </div>
    </div><!-- /content -->

    <a class="ui bottom attached button" href="{{ skill.url }}">
      {{ skill.title }} Website
      <i class="long right arrow icon"></i>
    </a>

  </div><!-- /card -->
</div>
